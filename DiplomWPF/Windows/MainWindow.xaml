<Window x:Class="DiplomWPF.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomWPF.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="192*"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Margin="5 3 0 3" Source="/Resources/rzdLogo.png"></Image>
        
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="175" Grid.Row="1">
            <TextBlock Text="Логин"></TextBlock>
            <TextBox x:Name="loginTextBox" Height="20" Width="auto"></TextBox>

            <TextBlock Text="Пароль" Height="20"></TextBlock>
            <PasswordBox x:Name="passwordPasswordBox"></PasswordBox>

            <Button x:Name="entryButton" Height="25" Margin="0 10 0 0" Content="Войти" Click="entryButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
